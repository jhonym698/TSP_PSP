<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="CONFIRMAR INFORMACION"
                android:layout_gravity="center"
                android:textSize="25sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Date"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblMDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000 00:00:00" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Type"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblDType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tipo" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Phase Injected"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblDInjected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seleccionado" />


            <TextView
                android:id="@+id/lblDRemoved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phase Removed"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seleccionado"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Time"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblDTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000 00:00:00" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="DescriptiÃ³n"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>