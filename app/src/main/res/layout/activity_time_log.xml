<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TimeLogActivity">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Log"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase"
                tools:layout_editor_absoluteX="0dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="80dp" />

            <Spinner
                android:id="@+id/spinnerPhase"
                android:layout_width="350dp"
                android:layout_height="30dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="99dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Start"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtFechaStart"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="fecha y hora inicio"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnObtenerFecha1"
                    android:layout_width="wrap_content"
                    android:onClick="onclick"
                    android:layout_height="wrap_content"
                    android:text="OBTENER FECHA" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Interrupction"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtMinutos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Escriba el tiempo en minutos"
                android:inputType="time" />

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Stop"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtFechaStop"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="fecha y hora fin"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnObtenerFecha2"
                    android:layout_width="wrap_content"
                    android:onClick="onclick"
                    android:layout_height="wrap_content"
                    android:text="OBTENER FECHA" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Delta"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtTotalDelta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Total"
                    android:inputType="time" />
                <Button
                    android:id="@+id/btnCalcular"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:onClick="onclick"
                    android:layout_height="wrap_content"
                    android:text="calcular"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Comments"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:hint="Escriba la descripcion de la fase o motivo del tiempo de interrupciÃ³n" />



            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onclick"
                android:text="Guardar"
                android:layout_gravity="center"
                android:layout_margin="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>